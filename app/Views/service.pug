extends layout
block menu
  +menu
block content
  h1 Services
  h5 Gérer les informations de vos comptes
  .mx-5.mt-4
    .row.mx-5.border-bottom.border-dark.text-left.font-weight-bold
      .col-4
        h3 Site web
      .col-4
        h3 Nom d'utilisateur
      .col-3
        h3 Mot de passe
    each service, index in services
      .mx-5.row.p-3.text-left(id=index)
        .col-4.d-flex.flex-row
          img.service-icon-10.mr-2.rounded-circle(src=service.img)
          h4.m-0=service.name
        .col-4
          h4=service.username != null ? service.username : "-"
        .col-3
          h4=show[index] ? service.password : "*******"
        .col-1.d-flex.align-items-center
          +form("post", "/service/show").m-0
            button.ml-4(name="show" value=index type="submit" data-toggle="tooltip" data-placement="right" title="Visibilité").border.border-0.bg-light
              if !show[index]
                i.fas.fa-eye.text-dark
              else
                i.fas.fa-eye-slash.text-dark
          a.ml-4(href="/home/service/" + service.id data-toggle="tooltip" data-placement="right" title="Modifier")
            i.fas.fa-ellipsis-v.text-dark
block script
  script(src="/javascripts/vendor/jquery-3.5.1.min.js")
  script(src="/javascripts/vendor/popper.js")
  script(src="/javascripts/vendor/bootstrap.min.js")
  script(src="/javascripts/tooltips.js")